#!/bin/sh

echo "nvim"
stow -v 2 neovim

echo "pryrc"
stow -v 2 pry
stow -v 2 awesomeprint
stow -v 2 gem

echo "[Symlink] git"
  if [ ! -L $HOME/.git_template ]; then
    ln -s $HOME/.dotfiles/git_template $HOME/.git_template
  fi

dotfiles=(
  agignore
  ctags
  gitconfig
  gitignore
  spacemacs
  tigrc
  tmux.conf
  zshrc
)

for file in "${dotfiles[@]}"
do
  echo "[Symlink] $file"
  ln -s $HOME/.dotfiles/$file $HOME/.$file
done

echo "[Symlink] gnupg"
  mkdir -p $HOME/.gnupg
  ln -s $HOME/.dotfiles/gpg.conf $HOME/.gnupg/gpg.conf
  ln -s $HOME/.dotfiles/gpg-agent.conf $HOME/.gnupg/gpg-agent.conf
