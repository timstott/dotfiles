[user]
  name = Timothy Stott
  email = stott.timothy@gmail.com
  signingkey = 0x0CDE05FC2683594F
[color]
  ui = true
[push]
  default = current
[advice]
  statusHints = false
[include]
  path = .gitconfig.user
[core]
  editor = nvim
  autocrlf = false
  excludesfile = ~/.gitignore
  pager = less -F -X               # print when entire file fits on screen otherwise open
[diff]
  tool = vimdiff
[difftool]
  prompt = false
[merge]
  summary = true
  verbosity = 1
  tool = vimdiff
[mergetool]
  prompt = false
[mergetool "vimdiff"]
  cmd="vim -c 'Gdiff' $MERGED"     # use fugitive.vim for 3-way merge
  keepbackup=false
[init]
  templatedir = ~/.git_template
[alias]
  ctags = !.git/hooks/ctags
[rebase]
  autosquash = true
[tag]
  forceSignAnnotated = true
