[color]
  ui = true
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red
  new = green
[alias]
  st = status
  br = branch
  co = checkout
  ci = commit
  ft = fetch

  # log
  sl = log --oneline --decorate -25
  l = log --graph --date=short
  gr = log --graph --decorate --date=short --format=format:'%C(bold yellow)%h%C(reset) (%ar) %C(white)%s%C(reset) %C(dim white)%an%C(reset) %C(bold red)%d%C(reset)' --all
[push]
  default = current
[advice]
  statusHints = false
[include]
  path = .gitconfig.user
[core]
  editor = vim
  autocrlf = false
  excludesfile = ~/.gitignore
[format]
  pretty = format:%C(blue)%ad%Creset %C(yellow)%h%C(green)%d%Creset %C(blue)%s %C(magenta) [%an]%Creset
[diff]
  tool = vimdiff
[difftool]
  prompt = false
[merge]
  summary = true
  verbosity = 1
  tool = vimdiff
[mergetool]
  prompt = false
[mergetool "vimdiff"]
  cmd="vim -c 'Gdiff' $MERGED"     # use fugitive.vim for 3-way merge
  keepbackup=false
